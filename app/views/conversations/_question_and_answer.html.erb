<%= render "components/message", {
  id: "question-#{question.id}",
  message: question.message,
  is_question: true,
} %>

<% if answer.present? %>
  <%= render "components/message", {
    id: "answer-#{answer.id}",
    sources: answer.sources.map(&:url),
    message: answer.message,
  } %>
<% end %>
