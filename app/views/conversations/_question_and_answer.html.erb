<%= render "components/conversation_message", {
  id: dom_id(question),
  message: question.message,
  is_question: true,
} %>

<% if answer.present? %>
  <%= render "components/conversation_message", {
    id: dom_id(answer),
    sources: answer.sources.map { |source| "#{Plek.website_root}#{source.url}" },
    message: answer.message,
  } %>
<% end %>
