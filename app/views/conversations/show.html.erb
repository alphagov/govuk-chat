<%= content_for :title, "GOV.UK Chat" %>
<%= content_for :error_summary do %>
  <% if @create_question.errors.any? %>
    <%= render "govuk_publishing_components/components/error_summary", {
      title: "There is a problem",
      items: error_items_for_summary_component(@create_question, user_question: "#create_question_user_question"),
    } %>
  <% end %>
<% end %>

<%= render "onboarding/limitations_messages" %>

<% if @more_information %>
  <%= render "onboarding/tell_me_more_messages" %>
<% end %>

<%= render "onboarding/privacy_messages" %>

<%= render "components/conversation_message", {
  id: "start-chatting",
  message: "Okay",
  is_question: true,
} %>

<%= render "components/conversation_message", {
  message: tag.p("Thanks! To get started, ask me a question."),
} %>

<% @conversation.questions_for_showing_conversation.each do |question| %>
  <%= render "question", question: %>
  <% if question.answer %>
    <%= render "answer", answer: question.answer %>
  <% end %>
<% end %>

<% content_for :form do %>
  <%= render "components/conversation_form", {
    url: update_conversation_path,
    name: "create_question[user_question]",
    input_id: "create_question_user_question",
    value: @create_question.user_question,
    error_items: @create_question.errors[:user_question].map { |message| { text: message } },
  } %>
<% end %>
