<%
  navigation_items ||= []
%>

<header class="app-c-header govuk-header" role="banner">
  <div class="app-c-header__container govuk-header__container govuk-width-container">
    <div class="govuk-grid-row">
      <div class="app-c-header__logo govuk-grid-column-two-thirds">
        <a href="/" class="app-c-header__link app-c-header__link--homepage govuk-header__link govuk-header__link--homepage">
          <span class="app-c-header__logotype govuk-header__logotype">
            <%= inline_svg_tag "components/chat_header/tudor-crown.svg", aria_hidden: true %>
            <span class="govuk-header__logotype-text">
              GOV.UK <span class="app-c-header__product-name">Chat</span>
            </span>
          </span>
        </a>
        <span class="app-c-header__tag govuk-tag">
          Experimental
        </span>
      </div>

      <% if navigation_items.any? %>
        <div class="govuk-grid-column-full">
          <%= render "govuk_publishing_components/components/layout_header/navigation_items", navigation_items: navigation_items %>
        </div>
      <% end %>
    </div>
  </div>
</header>
