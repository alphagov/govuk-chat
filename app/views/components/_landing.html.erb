<%
  title_text ||= nil
  lead_paragraph_text ||= nil
  info_text ||= nil
  id = "info-text" if info_text
%>

<% if title_text and lead_paragraph_text %>
  <%= content_tag :div, class: "app-c-landing" do %>
    <%= content_tag :div, class: "app-c-landing__svg-container" do %>
      <%= inline_svg_tag "govuk-chat-landing-icon.svg", aria_hidden: true %>
    <% end %>

    <%= content_tag( :h1, title_text, class: "app-c-landing__title") %>

    <%= content_tag(:p, lead_paragraph_text, class: "app-c-landing__lead-paragraph govuk-body") %>

    <%= render "components/blue_button", {
      text: "Try GOV.UK Chat",
      href: "/chat/onboarding",
      start: true,
      aria_describedby: id
    } %>

    <%= content_tag(:p, info_text, {id: "#{id}", class: "govuk-body govuk-!-margin-top-4"}) if info_text %>
  <% end %>
<% end %>
