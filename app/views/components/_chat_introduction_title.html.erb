<%
  standfirst_paragraphs ||= []
%>

<div class="app-c-chat-introduction-title">
  <%= content_tag :div, class: "app-c-chat-introduction-title__svg-container" do %>
    <%= inline_svg_tag "components/chat_introduction_title/govuk-chat-introduction-title-icon.svg", class: "app-c-chat-introduction-title__svg", aria_hidden: true %>
    <%= inline_svg_tag "components/chat_introduction_title/govuk-chat-introduction-title-icon-static.svg", class: "app-c-chat-introduction-title__svg app-c-chat-introduction-title__svg--static", aria_hidden: true %>
  <% end %>

  <%= content_tag(:h1, title, class: "app-c-chat-introduction-title__title") %>

  <% standfirst_paragraphs.each do |item| %>
    <%= content_tag(:p, item, class: "app-c-chat-introduction-title__lead-paragraph govuk-body") %>
  <% end %>
</div>
