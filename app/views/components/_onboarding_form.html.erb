<%
  privacy_onboarding ||= false
%>

<%= form_with url: url, class: "app-c-onboarding-form" do |f| %>
  <% if privacy_onboarding %>
    <%= render "components/blue_button", {
      text: "Okay, start chatting",
    } %>
  <% else %>
    <% if @more_information.present? %>
      <%= render "components/blue_button", {
        text: "I understand",
      } %>

      <%= link_to "Take me to GOV.UK", "#", class: "govuk-link" %>
    <% else %>
      <%= render "components/blue_button", {
        text: "I understand",
      } %>

      <%= render "govuk_publishing_components/components/button", {
        text: "Tell me more",
        href: onboarding_limitations_path(more_information: true),
        secondary_solid: true,
      } %>
    <% end %>
  <% end %>
<% end %>
