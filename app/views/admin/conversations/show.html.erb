<%= content_for :breadcrumbs do %>
  <%= render "govuk_publishing_components/components/breadcrumbs", {
    collapse_on_mobile: true,
    breadcrumbs: [
      {
        title: "Questions",
        url: admin_questions_path,
      },
      {
        title: "Conversation",
      },
    ],
  } %>
<% end %>
<%= render "admin/shared/error_summary",
  model: @filter,
  anchor_mappings: {
    start_date_params: "#start_date_params",
    end_date_params: "#end_date_params",
  } %>
<%= content_for :title, "Conversation" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-third">
    <%= render "admin/shared/question_filters", filter: @filter, url: admin_show_conversation_path %>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <%= render "admin/shared/questions_table",
      filter: @filter,
      questions: @filter.questions,
      path: :admin_show_conversation_path %>
  </div>
</div>
