<% content_for(:browser_title, @question_config.text) %>
<%= render "shared/error_summary",
  model: @user_description_form,
  anchor_mappings: {
    choice: "#user_description_form_choice",
  } %>
<%= content_for(:back_link, render("govuk_publishing_components/components/back_link",
                                  href: homepage_path) ) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with url: sign_up_user_description_path do %>
      <%= hidden_field_tag "user_description_form[choice]", nil, id: "user_description_form_choice_hidden_field" %>

      <%
        items = @question_config.options.map do |option|
          {
            value: option.value,
            text: option.text,
            checked: @user_description_form.choice == option.value,
          }
        end
      %>
      <%= render "govuk_publishing_components/components/radio", {
        id: "user_description_form_choice",
        name: "user_description_form[choice]",
        heading: @question_config.text,
        heading_caption: "Question 1 of 2",
        heading_level: 1,
        error_items: error_items(@user_description_form, :choice),
        items:,
      } %>

      <%= render "components/blue_button", {
        text: "Next question",
      } %>
    <% end %>
  </div>
</div>
